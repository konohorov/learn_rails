<h1>All players</h1>

<div class="">
    <button type="button" name="button"><%= link_to '+', new_player_path %></button>
</div>

<div class="">
  <table>
      <thead>
          <th>ID</th>
          <th>Nickname</th>
          <th>First name, Last name</th>
          <th>Team</th>
          <th colspan='3'>Actions</th>
      </thead>

      <tbody>
          <% @players.each do |player| %>
              <tr>
                  <td><%= player.id %></td>
                  <td><%= player.nickname %></td>
                  <td><%= player.first_name + " " + player.last_name if player.first_name && player.last_name %></td>
                  <td><%= player.team.name if player.team %></td>
                  <td><%= link_to('Show', player_path(player)) %></td>
                  <td><%= link_to('Edit', edit_player_path(player)) %></td>
                  <td><%= link_to('Delete', player_path(player), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }) %></td>
              </tr>
          <% end %>
      </tbody>
  </table>
</div>

<div class="">
  <%= link_to 'Home', root_path %>
</div>
