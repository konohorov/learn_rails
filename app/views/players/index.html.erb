<h1>All players</h1>

<button>
    <%= link_to '+', new_player_path %>
</button>

<table>
    <thead>
        <th>ID</th>
        <th>Nickname</th>
        <th>Slug</th>
        <th colspan='2'>First name, Last name</th>
        <th colspan='3'>Actions</th>
    </thead>

    <tbody>
        <% @players.each do |player| %>
            <tr>
                <td><%= player.id %></td>
                <td><%= player.nickname %></td>
                <td><%= player.slug %></td>
                <td><%= player.first_name + " " + player.last_name if player.first_name && player.last_name%></td>
                <td><%= link_to('Show', player_path(player)) %></td>
                <td><%= link_to('Edit', edit_player_path(player)) %></td>
                <td><%= link_to('Delete', player_path(player), method: :delete, data: { confirm: "Delete?" }) %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'Home', root_path %>
