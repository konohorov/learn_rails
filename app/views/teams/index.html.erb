<h1>All teams</h1>

<div class="">
    <button type="button" name="button"><%= link_to '+', new_team_path %></button>
</div>

<div class="">
  <table>
      <thead>
          <th>ID</th>
          <th>Name</th>
          <th>Slug</th>
          <th colspan='3'>Actions</th>
      </thead>

      <tbody>
          <% @teams.each do |team| %>
              <tr>
                  <td><%= team.id %></td>
                  <td><%= team.name %></td>
                  <td><%= team.slug %></td>
                  <td><%= link_to('Show', team_path(team)) %></td>
                  <td><%= link_to('Edit', edit_team_path(team)) %></td>
                  <td><%= link_to('Delete', team_path(team), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }) %></td>
              </tr>
          <% end %>
      </tbody>
  </table>
</div>

<div class="">
  <%= link_to 'Home', root_path %>
</div>
